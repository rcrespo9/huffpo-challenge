<div class="container" ng-controller="MessagesController">

  <!-- article -->
  <header class="text-center">
    <h1>{{article.title}}</h1>
    <small>By {{article.author}} | Posted on {{article.date | date:'longDate'}}</small>
  </header>

  <div id="sir-francis" class="text-center">
    <a href="http://en.wikipedia.org/wiki/Sir_Francis_Bacon" target="_blank">
      <img src="/images/sirfrancisbacon.jpg"/>
    </a>
  </div>

  <article>
    <p>{{article.content}}</p>
  </article>
  <!-- /article -->

  <!-- live discourse -->
  <div id="live-discourse" class="row text-center">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
      <h3 class="sub-header">{{messagesCount.header}}</h3>

      <nvd3-bullet-chart
        data="messagesCount"
        margin="{left:75,top:30,bottom:30,right:10}"
        width="580"
        height="160"
        interactive="true"
        tooltips="true"
        id="chart">
        <svg></svg>
      </nvd3-bullet-chart>

      <div id="chat">
        <div id="messagesDiv" class="default-skin">
          <div ng-repeat="msg in messages" class="message">
            <strong>{{msg.from}}</strong>: {{msg.body}}
          </div>
        </div>

        <div id="user-input">
          <input type="text" class="form-control" ng-model="name" placeholder="Name">
          <textarea class="form-control" rows="4" ng-model="msg" ng-keydown="addMessage($event)" placeholder="Message"></textarea>
        </div>

      </div>
    </div>
  </div>
  <!-- /live discourse -->


    
</div>
