<div class="container" ng-controller="MessagesController">

  <!-- article -->
  <header class="text-center">
    <h1 ng-bind="article.title"></h1>
    <small ng-cloak>By {{article.author}} | Posted on {{article.date | date:'longDate'}}</small>
  </header>

  <div ng-cloak id="sir-francis" class="text-center ng-cloak">
    <a href="http://en.wikipedia.org/wiki/Sir_Francis_Bacon" target="_blank">
      <img src="/images/sirfrancisbacon.jpg"/ alt="Francis Bacon">
    </a>
  </div>

  <article ng-bind="article.content">
    <p></p>
  </article>
  <!-- /article -->

  <!-- live discourse -->
  <div id="live-discourse" class="row text-center">
    <div class="col-lg-6 col-lg-offset-3 col-md-7 col-md-offset-3 col-sm-9 col-sm-offset-2">
      <h3 ng-bind="messagesCount.header" class="sub-header"></h3>

      <nvd3-bullet-chart
        data="messagesCount"
        margin="{left:75,top:30,bottom:30,right:10}"
        width="580"
        height="160"
        interactive="true"
        tooltips="true"
        id="chart">
        <svg></svg>
      </nvd3-bullet-chart>

      <div ng-cloak class="ng-cloak" id="chat">
        <div id="messagesDiv">
          <div ng-repeat="msg in messages" class="message">
            <strong>{{msg.from}}</strong>: {{msg.body}}
          </div>
        </div>

        <form name="userForm" ng-cloak class="ng-cloak" ng-keydown="addMessage($event)" id="user-input" novalidate>

          <div class="form-group" ng-class="{ 'has-error' : userForm.name.$invalid && !userForm.name.$pristine }">
            <input type="text" name="name" class="form-control" ng-model="name" placeholder="Name"  required>
          </div>

          <div class="form-group" ng-class="{ 'has-error' : userForm.msg.$invalid && !userForm.msg.$pristine }">
            <textarea class="form-control" name="msg" rows="4" ng-model="msg" placeholder="Message" required></textarea>
          </div>

        </form>

      </div>
    </div>
  </div>
  <!-- /live discourse -->


    
</div>
